\begin_layout Frame
The 
\series bold
multinomial 
\series default
is a generalization of the binomial distribution.
 
\begin_inset Separator latexpar
\end_inset


\end_layout

\begin_deeper
\begin_layout Definition
Suppose there are 
\begin_inset Formula $n$
\end_inset

 independent trials, each trial results in exactly one of fixed finite number
 
\begin_inset Formula $k$
\end_inset

 possible outcomes, with probabilities 
\begin_inset Formula $p_{1},...,p_{k}$
\end_inset

 (so that 
\begin_inset Formula $p_{i}\ge0$
\end_inset

 and 
\begin_inset Formula $\sum_{i=1}^{k}p_{i}=1)$
\end_inset

.
 Let 
\begin_inset Formula $X_{i}$
\end_inset

 be the number of times outcome number 
\begin_inset Formula $i$
\end_inset

 is observed over the 
\begin_inset Formula $n$
\end_inset

 trials, then the vector 
\begin_inset Formula $\boldsymbol{X}=(X_{1},X_{2},\dots,X_{k})^{T}$
\end_inset

 follows a
\series bold
 multinomial
\series default
 distribution with parameters 
\begin_inset Formula $n$
\end_inset

 and 
\begin_inset Formula $\boldsymbol{p}=(p_{1},p_{2},\dots,p_{k})^{T}$
\end_inset

, we write
\begin_inset Formula 
\[
\boldsymbol{X}\sim\text{Multinom}(n,\boldsymbol{p})
\]

\end_inset

The joint pmf 
\begin_inset Formula 
\[
P(X_{1}=x_{1},\dots,X_{k}=x_{k})={n \choose x_{1}x_{x}\cdots x_{k}}\ p_{1}^{x_{1}}p_{2}^{x_{2}}\dots p_{k}^{x_{k}}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Some Properties
\end_layout

\end_inset


\begin_inset Separator latexpar
\end_inset


\end_layout

\begin_deeper
\begin_layout Fact

\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula ${\rm E}(\boldsymbol{X})=n\boldsymbol{p}$
\end_inset

, i.e.
 
\begin_inset Formula ${\rm E}X_{i}=np_{i}(i=1,2,\dots,k)$
\end_inset


\end_layout

\begin_layout Enumerate
The covarience matrix 
\begin_inset Formula $\Sigma$
\end_inset

 is symmetric with diagonal entries 
\begin_inset Formula $\sigma_{i}^{2}=np_{i}(1-p_{i})$
\end_inset

, and off-diagonal entries 
\begin_inset Formula ${\rm Cov}(X_{i},X_{j})=-np_{i}p_{j},$
\end_inset

for 
\begin_inset Formula $i\ne j$
\end_inset

.
\end_layout

\begin_layout Enumerate
The correlation coefficients
\begin_inset Formula 
\[
{\rm Corr}(X_{i},X_{j})=\frac{-np_{i}p_{j}}{\sqrt{np_{i}(1-p_{i})\cdot np_{j}(1-p_{j})}}=-\sqrt{\frac{p_{i}p_{j}}{q_{i}q_{j}}}
\]

\end_inset


\end_layout

\begin_layout Enumerate
The marginal distribution of 
\begin_inset Formula $\boldsymbol{X}_{(k-1)}=(X_{1},X_{2},\dots,X_{k-1})^{T}$
\end_inset

 is 
\begin_inset Formula $\text{Multinom}(n,\boldsymbol{p}_{(k-1)})$
\end_inset

 with 
\begin_inset Formula $\boldsymbol{p}_{(k-1)}=(p_{1},\dots,p_{k-2},p_{k-1}+p_{k})^{T}$
\end_inset

.
\begin_inset Newline newline
\end_inset

 in particular, 
\begin_inset Formula $X_{i}\sim\text{Bin}(n,p_{i})$
\end_inset

.
 
\end_layout

\end_deeper
